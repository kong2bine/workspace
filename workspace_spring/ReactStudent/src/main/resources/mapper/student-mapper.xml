<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 해당 파일에 모든 쿼리문을 작성 -->
<mapper namespace="studentMapper">
    <resultMap id="student" type="com.green.ReactStudent.vo.StudentVO">
        <id column="STU_NUM" property="stuNum"/>
        <result column="STU_NAME" property="stuName"/>
        <result column="KOR_SCORE" property="korScore"/>
        <result column="ENG_SCORE" property="engScore"/>
        <result column="MATH_SCORE" property="mathScore"/>
        <result column="STU_AGE" property="stuAge"/>
        <result column="STU_TELL" property="stuTell"/>
        <result column="STU_ADDR" property="stuAddr"/>
    </resultMap>

    <!--학생정보조회 페이지-->
    <select id="getStuList" resultMap="student">
        SELECT STU_NUM
        ,STU_NAME
        ,KOR_SCORE
        ,ENG_SCORE
        ,MATH_SCORE
        FROM react_student;
    </select>


    <!--학생 등록-->
    <insert id="regStu">
        INSERT INTO REACT_STUDENT(
            STU_NAME
            ,STU_AGE
            ,STU_TELL
            ,STU_ADDR
            ,KOR_SCORE
            ,ENG_SCORE
            ,MATH_SCORE
        ) VALUES(
            #{stuName}
            , #{stuAge}
            , #{stuTell}
            , #{stuAddr}
            , 0
            , 0
            , 0

        )
    </insert>

    <!-- 학생 상세정보 보기 -->
    <select id="getStuDetail" resultMap="student">
        SELECT 	STU_NUM
        , STU_NAME
        , STU_AGE
        , STU_TELL
        , STU_ADDR
        , KOR_SCORE
        , ENG_SCORE
        , MATH_SCORE
        FROM react_student
        WHERE STU_NUM = #{stuNum};
    </select>

    <!--학생 정보 삭제-->
    <delete id="delete">
        DELETE FROM react_student
        WHERE STU_NUM = #{stuNum};
    </delete>
    <update id="updateScore">
        UPDATE REACT_STUDENT
        SET
            KOR_SCORE = #{korScore}
            ,ENG_SCORE = #{engScore}
            ,MATH_SCORE = #{mathScore}
        WHERE STU_NUM = #{stuNum}
    </update>



	
</mapper>































